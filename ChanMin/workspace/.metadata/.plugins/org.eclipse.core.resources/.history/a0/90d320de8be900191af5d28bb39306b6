<mapper namespace="com.dev.cloud.dao.itemMapper">
	

<insert parameterType="Total" id="insertItem">
insert into ITEM (
			itemNum
			,memberId
			,itemType
			,ideaDate
			,itemName
			,price
			,itemContent 
<if test="itemImagename != null">
			,itemImagename
			,saveItemImage 
</if>
			)VALUES (
			item_seq.NEXTVAL
			,#{memberId}
			,#{itemType}
			,to_date(#{ideaDate},'YYYY-MM-DD') as ideaDate
			,#{itemName}
			,#{price}
			,#{itemContent} 
<if test="itemImagename != null">
			,#{itemImagename}
			,#{saveItemImage}
</if>
) 
</insert>

<select parameterType="Total" id="getItemNumByItemType" resultType="Total">
select
		*
from 
	ITEM
where 
	itemType = #{itemType} 
</select>

