<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dev.cloud.dao.boardMapper">


	<select id="getBoardCount" parameterType="map" resultType="int">
		select count(*) 
		from board
		<if test="searchItem != null or searchItem != ''">
			<if test="searchItem.equalsIgnoreCase('All')">
				WHERE memberId LIKE '%'||#{searchWord}||'%'
				OR TITLE LIKE '%'||#{searchWord}||'%'
				OR CONTENT LIKE '%'||#{searchWord}||'%'
			</if>
			<if test="!searchItem.equalsIgnoreCase('All')">
				WHERE ${searchItem}  LIKE '%'||#{searchWord}||'%'
			</if>
		</if> 
	</select>
	
	<select id="userboard" parameterType="String" resultType="Board" >
	SELECT
		boardNum,
		MEMBERid,
		TITLE,
		CONTENT,
		QTYPE,
		QCATEGORY,
		originalFilename,
		saveFilename,
		to_char(boardDate, 'YYYY-MM-DD') as boardDate
		FROM BOARD
		Where memberId = #{memberId}
		ORDER BY boardNum DESC
	</select>
	
	<select id="selectAll" resultType="Board" parameterType="map">
		SELECT
		boardNum,
		MEMBERid,
		TITLE,
		CONTENT,
		QTYPE,
		QCATEGORY,
		originalFilename,
		saveFilename,
		to_char(boardDate, 'YYYY-MM-DD') as boardDate
		FROM BOARD
	
	 	<if test="searchItem != null or searchItem != ''">
			<if test="searchItem.equalsIgnoreCase('All')">
				WHERE memberId LIKE '%'||#{searchWord}||'%'
				OR TITLE LIKE '%'||#{searchWord}||'%'
				OR CONTENT LIKE '%'||#{searchWord}||'%'
			</if>
			<if test="!searchItem.equalsIgnoreCase('All')">
				WHERE ${searchItem}  LIKE '%'||#{searchWord}||'%'
			</if>
		</if> 
		ORDER BY boardNum DESC
	</select>

	<select id="selectOne" parameterType="Board" resultType="Board">
		Select 
			boardNum,
			MEMBERid,
			TITLE,
			CONTENT,
			QTYPE,
			QCATEGORY,
			originalFilename,
			saveFilename,
			to_char(boardDate, 'YYYY-MM-DD') as boardDate
		From BOARD
			where boardnum = #{boardNum}
	</select>



	<update id="updateBoard" parameterType="Board">
		update BOARD set
		TITLE = #{title},
		CONTENT = #{content},
		QTYPE = #{qType},
		QCATEGORY = #{qCategory}
		<if test="originalFilename!= null">
			originalFilename = #{originalFilename},
			saveFilename = #{saveFilename},
		</if>
		where boardnum = #{boardNum}
	</update>
	
	

	<delete id="deleteBoard" parameterType="int">
		Delete From BOARD
		where
		boardnum = #{boardNum}
	</delete>

	<insert id="insertBoard" parameterType="Board">
		INSERT INTO BOARD
		(
		boardNum,
		MEMBERID,
		TITLE,
		CONTENT,
	
		QCATEGORY,
		<if test="originalFilename!= null">
			originalFilename,
			saveFilename,
		</if>
		boardDate
		)
		VALUES
		(
		BOARD_SEQ.nextval
		, #{memberId}
		, #{title}
		, #{content}
		
		, #{qCategory}
		<if test="originalFilename!= null">
			, #{originalFilename}
			, #{saveFilename}
		</if>
		,sysdate
		)
	</insert>
</mapper>


